---
metadata:
  file_extension: ".scss"
---

.card {
    border: none;
    img.card-img-top {
        height: 22rem;
        object-fit: cover;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
    &.card-bottom-border-custom {
        border-bottom: 2px solid $color-2!important;
        border-radius: 0!important;
    }
    .right-image-400 {
        max-height: 400px;
    }
    .card-header {
        &.card-header-custom {
            background-color: $color-1;
            & + .collapse {
                background-color: $color-1;
            }
        }
    }
    &.card-with-border {
        box-shadow: 0px 2px 5px #00000040;
        min-height: 600px;
        transition: all linear 0.5s;
    }
    &.card-with-border:hover {
        box-shadow: 0px 15px 20px $color-4;
    }
    & h5 {
        font-weight: 600!important;
        text-align: start;
    }
}