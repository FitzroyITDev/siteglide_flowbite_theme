.small-banner {
    width: 100%;
    min-height: 40vh;
    padding: 1rem;
    img.img-banner {
        min-height: inherit;
        width: 100%;
    }
    .banner-gradient-2 {
        background: transparent linear-gradient(180deg, $color-2 0%, #333333 100%) 0% 0% no-repeat padding-box;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }
    .banner-content {
        position: relative;
    }
    .container {
        min-height: inherit !important;
        .row {
            min-height: inherit !important;
        }
    }
}

.background-banner {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    img.img-banner {
        width: 100%;
        position: absolute;
    }
    video.video-banner {
        width: 100%;
        position: absolute;
    }
    .banner-gradient {
        background: transparent linear-gradient(180deg, #00000000 0%, $color-2 100%) 0% 0% no-repeat padding-box;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        &.half {
            width: 50%;
        }
        .container {
            height: inherit;
            .row {
                height: inherit;
            }
        }
    }
    .banner-backdrop {
        background-color: $color-2;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        opacity: 0.2;
    }
    .banner-backdrop-color-4 {
        background-color: $color-4;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        opacity: 0.5;
    }
    .banner-partial-content {
        position: relative;
        height: 20%;
        .row.inner-content {
            height: 100%;
        }
    }
    .banner-body-content {
        position: relative;
        height: 80%;
        .row {
            height: inherit;
        }
    }
    .banner-full-content {
        position: relative;
        height: 100%;
        .row {
            height: inherit;
        }
    }
    .main-banner-content {
        position: relative;
        height: 100%;
        // top: 3vh;
        .row {
            height: inherit;
        }
        @media only screen and (max-width: 576px) {
            h1.banner-text {
                font-size: 2rem !important;
                text-align: center;
                line-height: 3.2rem!important
            }
        }
    }
}

.mosaic-image {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    min-height: 350px;
    .mosaic-backdrop {
        background-color: $color-2;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        opacity: 0.5;
        transition: all 1s ease-in-out;
    }
    & a {
        width: inherit;
        height: inherit;
    }
    &:hover .mosaic-backdrop {
        background-color: $color-6;
        opacity: 1;
        transition: all 1s ease-in-out;
    }
    .mosaic-content {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        line-height: 40px;
        &>div {
            height: inherit;
        }
        & h2 {
            font-family: poppins, sans-serif;
            line-height: 40px;
            letter-spacing: normal;
        }
    }
}

.mosaic-image-follow-us {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    min-height: 400px;
    @media only screen and (min-width: 1400px) {
        & {
            min-height: 500px !important;
        }
    }
    @media only screen and (min-width: 576px) and (max-width: 1399px) {
        & {
            min-height: 300px !important;
        }
    }
}

.side-banner {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    height: inherit;
    min-height: inherit;
    padding: 0;

    img.img-banner {
        height: inherit;
        min-height: inherit;
        width: 100%;
    }
}

.fit-height-container {
    height: inherit;
    min-height: inherit;
    .fit-height-row {
        height: inherit;
        min-height: inherit
    }
}