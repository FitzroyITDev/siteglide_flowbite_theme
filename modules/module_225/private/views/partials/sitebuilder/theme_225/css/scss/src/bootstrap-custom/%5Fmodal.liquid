.modal {
    @media only screen and (max-width: 575px) {
        & {
            padding-right: 0;
            padding-left: 0;
        }
    }
}

.modal-dialog {
    @media only screen and (max-width: 575px) {
        & {
            margin: 0;
        }
    }
}
.modal-content {
    border-radius: 0;
}

.modal-header {
    border-bottom: none;
    .btn-close {
        padding: 1rem 0rem;
        opacity: 1;
    }
}

.modal-body {
    padding: 0rem 1rem 1rem 1rem;
}

.modal-footer {
    border-top: none;
    justify-content: flex-start;
    padding: 0.75rem 0 3rem 1rem;
}