---
metadata:
  file_extension: ".scss"
---

/* Typography */
h1 {
    font-size: 2.8rem;
    line-height: 4rem;
    margin: 5px 0 10px;
    color: $color-1;
    font-weight: 600;
    font-family: $title-font;
    font-style: normal;
    // letter-spacing: $letter-spacing-3-45;
}

h2 {
    font-size: 2.25rem;
    line-height: 3.25rem;
    margin: 5px 0 10px;
    color: $color-1;
    font-weight: 600;
    font-family: $title-font;
    font-style: normal;
    // text-transform: uppercase; 
    // letter-spacing: $letter-spacing-3-45;
}

h3 {
    font-size: 2rem;
    line-height: 3rem;
    margin: 5px 0 10px;
    color: $color-1;
    font-weight: 600;
    font-family: $title-font;
    font-style: normal;
}

h4 {
    font-size: 1.7rem;
    line-height: 2.3rem;
    margin: 5px 0 30px;
    color: $color-2;
    font-weight: 400;
    font-family: $paragraph-font;
    font-style: normal;
}

h5 {
    font-size: 1.25rem;
    line-height: 1.65rem;
    margin: 5px 0 10px;
    color: $color-1;
    font-weight: 400;
    font-style: normal;
}

h6 {
    font-size: 0.8rem;
    line-height: 0.8rem;
    margin: 5px 0 10px;
    color: $color-1;
    font-weight: 400;
    font-style: normal;
}

p {
    margin: 0 0 1.3rem;
    font-style: normal;
    font-weight: 400;
    line-height: 27px;
}

a {
    text-decoration: none !important;
    font-weight: 400;
}

ul.custom-list li {
    font-size: $default-font-size;
}

.font-size-16 {
    font-size: 16px;
}

.font-size-14 {
    font-size: 14px;
}

.font-size-16-all {
    * {
        font-size: 16px !important;
    }
}

.font-size-14-all {
    * {
        font-size: 14px !important;
    }
}